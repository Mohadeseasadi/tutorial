<%- include('includes/header.ejs') %>

    <main>
        <p>لیست محصولات</p>
        <% if(products.length>0){ %>
            <%for(let item of products) {%>
                <p><%= item.title %></p>
                <form action="/" method="post">
                    <input type="hidden" value="<%= item._id %>" name="productId">
                    <button type="submit">Delete</button>
                </form>
            <% } %>
        <% } else{ %>
            <p>محصولی پیدا نشد</p>
        <% } %>
    </main>
    
</body>
</html>